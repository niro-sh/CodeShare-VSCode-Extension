{
	"name": "codeshare",
	"displayName": "CodeShare",
	"description": "Share your code with others",
	"version": "1.1.0",
	"publisher": "Procker",
	"repository": {
		"type": "git",
		"url": "https://github.com/niro-sh/CodeShare-VSCode-Extension.git"
	},
	"bugs": {
		"url": "https://github.com/niro-sh/CodeShare-VSCode-Extension/issues"
	},
	"author": {
		"name": "Niklas Stegmann"
	},
	"icon": "media/logo.png",
	"galleryBanner": {
		"color": "#22303C",
		"theme": "dark"
	},
	"homepage": "https://code.niro.sh/",
  "engines": {
    "vscode": "^1.70.0"
  },
	"categories": [
		"Other"
	],
	"keywords": [
		"code",
		"share",
		"procker",
		"hastebin",
		"pastebin"
	],
	"activationEvents": [
		"onCommand:codeshare.website",
		"onCommand:codeshare.share",
		"onCommand:codeshare.shareWithPassword",
		"onView:codeshareShares"
	],
  "main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "codeshare.website",
				"title": "CodeShare Website"
			},
			{
				"command": "codeshare.share",
				"title": "üìÑ Share Code"
			},
			{
				"command": "codeshare.shareWithPassword",
				"title": "üìë Share Code with Password"
			},
			{
				"command": "codeshare.view.copyShare",
				"title": "üìã Copy Share"
			},
			{
				"command": "codeshare.view.openShare",
				"title": "üåê Open Share in Browser"
			},
			{
				"command": "codeshare.view.removeShare",
				"title": "‚ùå Remove Share"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "codeshare.share",
					"group": "codeshareGroup@1"
				},
				{
					"command": "codeshare.shareWithPassword",
					"group": "codeshareGroup@2"
				}
			],
			"view/item/context": [
				{
					"command": "codeshare.view.copyShare",
					"group": "codeshareViewGroup@1",
					"when": "view == codeshareShares"
				},
				{
					"command": "codeshare.view.openShare",
					"group": "codeshareViewGroup@2",
					"when": "view == codeshareShares"
				},
				{
					"command": "codeshare.view.removeShare",
					"group": "codeshareViewGroup@3",
					"when": "view == codeshareShares"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "codeshareActivity",
					"title": "CodeShare",
					"icon": "media/logo.svg"
				}
			]
		},
		"views": {
			"codeshareActivity": [
				{
					"id": "codeshareShares",
					"name": "Shares"
				}
			]
		}
	},
	"scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
	},
	"dependencies": {
		"got": "^11.8.3",
		"moment": "^2.29.4"
	}
}
