{
	"name": "codeshare",
	"displayName": "CodeShare",
	"description": "Share your code with others",
	"version": "1.0.3",
	"publisher": "Procker",
	"repository": {
		"type": "git",
		"url": "https://github.com/ProckerIO/CodeShare-VSCode-Extension.git"
	},
	"bugs": {
		"url": "https://github.com/ProckerIO/CodeShare-VSCode-Extension/issues"
	},
	"author": {
		"name": "Niklas Stegmann"
	},
	"icon": "media/logo.png",
	"galleryBanner": {
		"color": "#333842",
		"theme": "dark"
	},
	"homepage": "https://code.prkr.li/",
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"code",
		"share",
		"procker",
		"hastebin",
		"pastebin"
	],
	"activationEvents": [
		"onCommand:codeshare.website",
		"onCommand:codeshare.share",
		"onCommand:codeshare.shareWithPassword",
		"onView:codeshareShares"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "codeshare.website",
				"title": "CodeShare Website"
			},
			{
				"command": "codeshare.share",
				"title": "ðŸ“„ Share Code"
			},
			{
				"command": "codeshare.shareWithPassword",
				"title": "ðŸ“‘ Share Code with Password"
			},
			{
				"command": "codeshare.view.copyShare",
				"title": "Copy Share"
			},
			{
				"command": "codeshare.view.openShare",
				"title": "Open Share in Browser"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "codeshare.share",
					"group": "codeshareGroup@1"
				},
				{
					"command": "codeshare.shareWithPassword",
					"group": "codeshareGroup@2"
				}
			],
			"view/item/context": [
				{
					"command": "codeshare.view.copyShare",
					"when": "view == codeshareShares"
				},
				{
					"command": "codeshare.view.openShare",
					"when": "view == codeshareShares"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "codeshareActivity",
					"title": "CodeShare",
					"icon": "media/logo.svg"
				}
			]
		},
		"views": {
			"codeshareActivity": [
				{
					"id": "codeshareShares",
					"name": "Shares"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack --devtool nosources-source-map --config ./build/node-extension.webpack.config.js",
		"watch": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./build/node-extension.webpack.config.js",
		"package": "webpack --mode production --config ./build/node-extension.webpack.config.js",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.51.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0",
		"ts-loader": "^8.0.3",
		"webpack": "^4.44.1",
		"webpack-cli": "^3.3.12"
	},
	"dependencies": {
		"got": "^11.8.0",
		"moment": "^2.29.1"
	}
}
